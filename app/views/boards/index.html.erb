<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Event on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.event_on %></td>
        <td><%= link_to '詳細', board, class: 'btn btn-outline-dark' %> </button></td>
        <td><%= link_to '編集', edit_board_path(board), class: 'btn btn-outline-dark' %></td>
        <td><%= link_to '削除', board, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規ボード', new_board_path, class: 'btn btn-outline-primary' %>
