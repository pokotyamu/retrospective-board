<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Event on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.event_on %></td>
        <td>
	    <%= link_to board, class: 'btn btn-outline-dark' do %>
		<i class="fas fa-chalkboard"></i>
	    <% end %>
	</td>
        <td>
	    <%= link_to edit_board_path(board), class: 'btn btn-outline-dark' do %>
		<i class="fas fa-edit"></i>
	    <% end %>
	</td>
        <td>
	    <%= link_to  board, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' do %>
		<i class="fas fa-trash-alt"></i>
	    <% end %>
	</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規ボード', new_board_path, class: 'btn btn-outline-primary' %>
